<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sign"
    android:id="@+id/per_info_lay">

    <EditText
        android:id="@+id/et_add_pinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bt_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/edit"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/et_name_pinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_add_pinfo"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_phone_pinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_add_pinfo"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="-16dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_dob_pinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_add_pinfo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/et_pass_pinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profilespin"
        android:layout_alignTop="@+id/profilespin"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="31dp"
        android:text="Name"
        android:textColor="#ffffff"
        android:textSize="16sp"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="92dp"
        android:text="Address"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_dob_pinfo"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginEnd="12dp"
        android:text="DoB"
        android:textColor="#ffffff"
        android:textSize="16sp" />
<com.github.ybq.android.spinkit.SpinKitView
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:layout_centerInParent="true"
    android:id="@+id/profilespin"
    style="@style/SpinKitView.Small.Wave"
    app:SpinKit_Color="#ffffff"
    />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_pass_pinfo"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="27dp"
        android:text="Phone"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignBottom="@+id/profilespin"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="20dp"
        android:text="Password"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/save"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/perinfo_dob"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/et_dob_pinfo"
        android:layout_toStartOf="@+id/et_dob_pinfo"
        android:background="@drawable/twotone_calendar_today_black_24dp" />

</RelativeLayout>