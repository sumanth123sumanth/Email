<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhonenumberVerification"
    android:id="@+id/phonever_lay"
    android:background="@drawable/sign">

    <TextView
        android:id="@+id/tv_userchngmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="141dp"
        android:layout_centerHorizontal="true"
        android:text="Phone Ok"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt_passwd_update"
        android:layout_alignTop="@+id/tv_userchngmail"
        android:layout_marginStart="46dp"
        android:layout_marginTop="-41dp"
        android:layout_centerHorizontal="true"
        android:text="Hello!"
        android:textColor="#ffffff"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="36dp" />

    <EditText
        android:id="@+id/et_enter_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_cnf_password"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="New Password"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="101dp" />

    <EditText
        android:id="@+id/et_cnf_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Confirm Password"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/bt_passwd_update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginBottom="225dp"
        android:background="@drawable/buttonback"
        android:text="Update Password"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="246dp" />
</RelativeLayout>